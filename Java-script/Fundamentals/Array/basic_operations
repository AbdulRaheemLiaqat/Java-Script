const neighbours = ['India', 'Afghanistan', 'Iran'];

neighbours.push('Utopia');
console.log(neighbours); // ['India', 'Afghanistan', 'Iran', 'Utopia']

neighbours.pop(); 
console.log(neighbours); // ['India', 'Afghanistan', 'Iran']

if (!neighbours.includes('Germany')) {
  console.log('Probably not a central European country :D');
}

const index = neighbours.indexOf('Iran');
if (index !== -1) {
  neighbours[index] = 'Islamic Republic of Iran';
}
console.log(neighbours); // modified array